extends ../layout

block stylesheet
    link(rel='stylesheet', href='/static/css/'+ route +'.css')

block content
    div#dashboard
        .row
            for item in dashBoardList
                .col-sm-6.col-md-3
                    .panel.panel-default
                        .panel-body.pointer( onclick= `__router.go('/${route}')` )
                            | #{item.title}
    div#app

block script
    script( src='/static/js/vendor.js' )
    script( src='/static/js/'+ route +'.js' )